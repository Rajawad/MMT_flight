		Thread.sleep(3000);
		toInput.sendKeys(To);
		
	       r.keyPress(KeyEvent.VK_DOWN);
	       Thread.sleep(5000);
	       r.keyPress(KeyEvent.VK_ENTER);
	       Thread.sleep(3000);
	     
	
	}
	public void errormsg() {
		 String msg="From & To airports cannot be the same";
